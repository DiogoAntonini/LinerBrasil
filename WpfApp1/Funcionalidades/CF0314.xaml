<Window x:Class="LinerApp.Funcionalidades.CF0314"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
                Height="110" Width="220" ResizeMode="NoResize" Title="Liner Brasil Ltda."
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        BorderBrush="#006934" BorderThickness="3">

    <Grid Background="White" Margin="0,0,0,-1">

        <TextBlock Text="Informe o lote:" Margin="56,13,69,70"/>
        <TextBox x:Name="txtLoteFornecedor" Margin="56,35,69,53" MaxLength="8"/>

        <Button 
            x:Name="btnConfirmar"
            Content="CONFIRMAR" 
            Width="66" 
            Height="26" 
            Background="#003C1E" 
            Foreground="White" 
            FontSize="8" 
            FontWeight="Bold"   
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="37,75,0,0" 
            Click="btnConfirmar_Click"
            BorderThickness="1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#006934"/>
                    <Setter Property="BorderBrush" Value="#006934"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="1"
            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button 
            x:Name="btnVoltar"
            Content="VOLTAR" 
            Width="66" 
            Height="26" 
            Background="White" 
            Foreground="#003C1E" 
            FontSize="8" 
            FontWeight="Bold"   
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="107,75,0,0" 
            Click="btnVoltar_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#006934"/>
                    <Setter Property="BorderBrush" Value="#003C1E"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>