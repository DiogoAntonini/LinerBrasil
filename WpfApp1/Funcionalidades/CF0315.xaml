<Window x:Class="LinerApp.Funcionalidades.CF0315"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="365" Width="365" ResizeMode="NoResize" Title="Liner Brasil Ltda."
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        BorderBrush="#006934" BorderThickness="3">

    <Grid Background="White" Margin="0,0,0,-1">

        <TextBox x:Name="DsDyeTeste" Margin="56,37,193,302" MaxLength="8"/>
        <TextBlock Text="Dye Teste:" Margin="56,20,193,320"/>

        <TextBox x:Name="DsCor" Margin="56,86,193,253" MaxLength="8"/>
        <TextBlock Text="Cor:" Margin="56,69,193,271"/>

        <TextBox x:Name="StAlvejante" Margin="56,135,193,204" MaxLength="8"/>
        <TextBlock Text="Alvejante:" Margin="56,118,193,222"/>

        <TextBox x:Name="NrGramatura" Margin="56,184,193,155" MaxLength="8"/>
        <TextBlock Text="Gramatura:" Margin="56,167,193,173"/>

        <TextBox x:Name="NrRelease" Margin="56,234,193,105" MaxLength="8"/>
        <TextBlock Text="F. Release:" Margin="56,215,193,125"/>

        <TextBox x:Name="NrMigracao" Margin="56,282,193,56" MaxLength="8"/>
        <TextBlock Text="Migração:" Margin="56,265,193,75"/>

        <TextBox x:Name="IdRecebimento" Margin="225,37,24,302" MaxLength="8"/>
        <TextBlock Text="Nº Bobina:" Margin="225,20,24,320"/>

        <TextBox x:Name="NrAdesao" Margin="225,86,24,253" MaxLength="8"/>
        <TextBlock Text="Adesão:" Margin="225,69,24,271"/>

        <TextBox x:Name="NrLargura" Margin="225,135,24,204" MaxLength="8"/>
        <TextBlock Text="Largura:" Margin="225,118,24,222"/>

        <TextBox x:Name="NmOperador" Margin="225,184,24,155" MaxLength="8"/>
        <TextBlock Text="Inspetor:" Margin="225,167,24,173"/>

        <TextBox x:Name="DsStatusSiliconizacao" Margin="225,233,24,105" MaxLength="8"/>
        <TextBlock Text="Status:" Margin="225,215,24,125"/>

        <Button 
            x:Name="btnConfirmar"
            Content="CONFIRMAR" 
            Width="66" 
            Height="26" 
            Background="#003C1E" 
            Foreground="White" 
            FontSize="8" 
            FontWeight="Bold"   
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="110,324,0,0" 
            Click="btnConfirmar_Click"
            BorderThickness="1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#006934"/>
                    <Setter Property="BorderBrush" Value="#006934"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="1"
            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button 
            x:Name="btnVoltar"
            Content="VOLTAR" 
            Width="66" 
            Height="26" 
            Background="White" 
            Foreground="#003C1E" 
            FontSize="8" 
            FontWeight="Bold"   
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="180,324,0,0" 
            Click="btnVoltar_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#006934"/>
                    <Setter Property="BorderBrush" Value="#003C1E"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>